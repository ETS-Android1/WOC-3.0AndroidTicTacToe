<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/firebaseprofileimage"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_android_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/nametextformfirestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/firebaseprofileimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailtextformfirestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/firebaseprofileimage"
        app:layout_constraintTop_toBottomOf="@+id/nametextformfirestore" />

    <TextView
        android:id="@+id/mobiletextformfirestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/firebaseprofileimage"
        app:layout_constraintTop_toBottomOf="@+id/emailtextformfirestore" />

    <TextView
        android:id="@+id/uidtextbox"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/firebaseprofileimage"
        app:layout_constraintTop_toBottomOf="@+id/mobiletextformfirestore" />

    <Button
        android:id="@+id/addfriendinusers"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="10dp"
        android:text="Add Friend"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firebaseprofileimage"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>